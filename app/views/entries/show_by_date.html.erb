<div class="banner d-flex align-items-center justify-content-center mb-3" style="background-color: #FFF8DD">
  <div class="container m-5">
    <div class="text-center">
      <h1 class="pb-2">My Journal entries</h1>
      <% if @entries_on_same_date.any? %>
          <h3><%= @entries_on_same_date.first.created_at.strftime("%B %d, %Y") %></h3>
      <% end %>
    </div>
  </div>
</div>


<div class="container">


  <div class="row">
    <% @entries_on_same_date.each do |entry| %>
      <div class="col-lg-6">
        <div class="card mb-3">
          <div class="card-body">
            <h3><%= entry.title %></h3>
            <h4><%= entry.address %></h4>
            <p><%= entry.content %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>


  <div class="scroll-container d-flex justify-content-between">
    <% @entries_on_same_date.each do |entry| %>
            <% if entry.photos.any? %>
              <% entry.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: "300", width: "400", crop: :fill %>
              <% end %>
           <% end %>
    <% end %>
  </div>


</div>
